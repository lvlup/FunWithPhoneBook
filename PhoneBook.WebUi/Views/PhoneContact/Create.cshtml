@model PhoneBook.DataLayer.Entity.PhoneContact
@{
    ViewBag.Title = "Создание контакта";
}


<div class="page-header text-center">
    <h2>Новый контакт</h2>
</div>

@using (Html.BeginForm("Create", "PhoneContact", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(p => p.Name, new { @class = "form-control", tabindex = 1 })
            @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Surname, new {@class = "col-sm-2 control-label"})
        <div class="col-sm-10">
            @Html.TextBoxFor(p => p.Surname, new {@class = "form-control", tabindex = 2})
            @Html.ValidationMessageFor(model => model.Surname, null, new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(p => p.PhoneNumber, new { @class = "form-control", tabindex = 3 })
            @Html.ValidationMessageFor(model => model.PhoneNumber, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Назад к списку контактов", "Index")
</div>

